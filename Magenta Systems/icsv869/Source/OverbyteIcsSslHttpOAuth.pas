            FWebSrvPort := Copy(FRedirectUrl, I + 1, 6);
            I := Pos('/', FWebSrvPort);
            if I > 2 then FWebSrvPort := Copy(FWebSrvPort, 1, I - 1);
         end;
     end;
end;

